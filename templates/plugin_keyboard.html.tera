{% extends "plugin" %}

{%block content%}

{% set_global contain_playable_element = false %}
<p>the plugin ask to enter a value</p>
<form method="get" action="/plugin">
	{% if keyboard_heading %}
		<label for="additional_input">{{keyboard_heading}}</label>
	{%endif%}
	<input type="{% if keyboard_hidden %}password{% else %}text{% endif %}" id="additional_input" name="additional_input" /><br />
	<input type="hidden" name="path" value="{{access.path_escaped | safe}}" />
	<input type="hidden" name="parent_path" value="{{parent.path_escaped | safe}}" />
	<input type="hidden" name="input" value="{{access.input_encoded | safe}}" />
	<input type="hidden" name="input_parent" value="{{parent.input_encoded | safe}}" />
	<input type="submit" value="Submit">
</form>
{% if keyboard_default %}
	<p><b>default input:</b>{{keyboard_default}}</p>
{% endif %}
{%endblock content%}
