{% extends "base" %}
{%block title%}
	{{display_text | safe}}
{%endblock title%}

{%block content%}

<!--TODO: additionnal metadata-->
<div class = "main_media">
	{%if plugin_type == "video"%}
		<video controls>
			<source src="{{page.resolved_listitem.path}}" />
			{#{% for subtitle in page.resolved_listitem.subtitles %}
				<track kind="captions" src="{{subtitle}}" srclang="en" label="English"/>
			{% endfor %}#}
		</video>
	{%elif plugin_type == "audio"%}
		<audio controls>
			<source src="{{page.resolved_listitem.path}}" />
		</audio>
	{%else%}
		can't detect the type of media this content is. please download the file to play it
	{%endif%}
</div>
<h2>download:</h2>
<ul class="download">
	<li>
		<a href="{{page.resolved_listitem.path}}">{%-if plugin_type == "video"-%}
			video
		{%-elif plugin_type == "audio"-%}
			audio
		{%-else-%}
			media
		{%-endif-%}</a>
	</li>
	<!--todo: subtitles-->
</ul>
{%endblock content%}
